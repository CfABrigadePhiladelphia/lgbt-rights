@import "reset"
@import "variables"

// utility classes
.hidden
  display: none

span.button
  display: block
  overflow: hidden
  margin: 0 0 7px 0
  border: $border
  color: $text_color
  background-color: $pale_gray 
  border-radius: 3px
  $pale_gradient()
  font-weight: bold
  text-align: center
  text-decoration: none
  vertical-align: middle
  line-height: 32px
  height: 32px
  cursor: pointer

  &:hover
    cursor: pointer
  
body
  font-family: 'Droid Serif', Georgia, Times, serif
  color: $text_color
  a
    color: $link_color

// header
header
  padding: 3% 3% 15px 3%
  h1
    a
      display: block
      text-decoration: none
      text-align: center
      font-weight: bold

      b.mark
        margin: 0 auto;
        background: url('/images/logo.png')
        display: block
        width: 180px
        height: 195px
        margin-bottom: 10px

      span
        font-weight: normal
        padding-left: .15em

      em
        display: block
        font-style: italic
        font-weight: 400
        color: #777
   
.content
  padding: 0 3%

  h2
    line-height: 1.3em
    font-weight: bold

    &.user-location
      display: none;
    &.user-location.visible
      display: block;

  p.address
    margin-bottom: 10px

  ul.rights
    list-style-type: none

    li.header
      padding-top: 10px
      font-weight: bold
      clear: left
      overflow: hidden

      ul
        border-top: 1px solid $gray
        padding-top: 5px
        margin-bottom: 10px
        list-style-type: none

        li
          clear: left
          padding: 3px 0
          font-weight: normal
          line-height: 20px
          float: left

          &:before {
            background: url('/images/icons.png') no-repeat 0 0
            line-height: 20px
            content: ''
            width: 22px
            height: 20px
            display: inline-block
            margin-right: 5px
            float: left
          }

          &.false:before {
            background-position: 0 0
          }

          &.true:before {
            background-position: -28px 0 
          }

          &.other:before {
            background-position: -56px 0
          }

// search form
input
  width: 98%
  font-size: 112%
  font-family: inherit

#newsfeed
  border-top: 1px solid $gray
  margin-top: 20px
  line-height: 1.3em
  padding-top: 5px
